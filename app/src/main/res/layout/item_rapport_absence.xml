<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    tools:context=".view.RapportAbsenceAdapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date de l'absence -->
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 01/12/2024"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Heure de l'absence -->
        <TextView
            android:id="@+id/textViewHeure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heure: 10:00"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <!-- Classe concernée -->
        <TextView
            android:id="@+id/textViewClasse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classe: Informatique"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <!-- Enseignement concerné -->
        <TextView
            android:id="@+id/textViewEnseignement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enseignement: Mathématiques"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <!-- Statut de l'absence -->
        <TextView
            android:id="@+id/textViewStatut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statut: Justifiée"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
